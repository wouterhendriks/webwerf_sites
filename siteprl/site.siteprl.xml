<?xml version="1.0" encoding="UTF-8" ?>
<siteprofile xmlns="http://www.webhare.net/xmlns/publisher/siteprofile"
             xmlns:p="http://www.webhare.net/xmlns/publisher/components"
             >

  <!-- ***********************************************************************

       Sitemap

  ***********************************************************************  -->
  <contenttype namespace="http://sites.webwerf.nl/filetype/sitemap" />
  <filetype typedef="http://sites.webwerf.nl/filetype/sitemap"
            title="Sitemap"
            blobiscontent="false"
            ispublishable="true"
            tolliumicon="tollium:files/text_xml"
            ispublishedassubdir="false"
            needstemplate="false"
            isacceptableindex="true"
            extensions=".xml"
            />

  <apply>
    <to type="file" filetype="http://sites.webwerf.nl/filetype/sitemap" />
    <usepublishtemplate script="mod::webwerf_sites/scripts/sitemap/sitemap.whscr" />
  </apply>

</siteprofile>
